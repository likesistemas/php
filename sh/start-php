#!/bin/bash

run-event "db-ready"

if [ -n "$DB_MIGRATE" ] && [ "$DB_MIGRATE" = "true" ]; then
    migrate-db
fi 

if [ -n "$DB_SEED" ] && [ "$DB_SEED" = "true" ]; then
    seed-db
fi 

if [ -n "${1}" ]; then
    if [ "${1}" = "cli" ]; then
        CLI="true";
        shift 1
    fi

    if [ "${CLI}" = "false" ] && [ "${1}" != "php-fpm" ]; then
        exec-cmd "$@"
        PHP_FPM_PARAMS="php-fpm"
    fi
else
    PHP_FPM_PARAMS="$@"
fi

run-event "ready"

if [ "${CLI}" = "false" ]; then
    set -- start-php-fpm "${PHP_FPM_PARAMS}"
fi

exec "$@"