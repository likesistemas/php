#!/bin/bash

run-event "db-ready"

if [ -n "$DB_MIGRATE" ] && [ "$DB_MIGRATE" = "true" ]; then
    migrate-db
fi 

if [ -n "$DB_SEED" ] && [ "$DB_SEED" = "true" ]; then
    seed-db
fi 

if [ -n "${1}" ] && [ "${1}" != "php-fpm" ]; then
    exec-cmd "$@"
    run-event "cmd-executed"
fi

run-event "ready"

if [ "$CLI" != "true" ]; then
    start-php-fpm
fi