#!/bin/bash

if [ -n "$DB_MIGRATE" ] && [ "$DB_MIGRATE" = "true" ]; then
    migrate-db
fi 

if [ -n "$DB_SEED" ] && [ "$DB_SEED" = "true" ]; then
    seed-db
fi 

if [ -n "${1}" ]; then
    echo "Executando command...";
    exec-cmd "$@"
fi

echo "Iniciando PHP...";
/usr/bin/supervisord -n -c ${PHP_CONFIG_PATH}supervisor.conf;