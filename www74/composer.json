{
  "name": "like/exemplo74",
  "description": "Exemplo usando o PHP 7.4 com Phinx.",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.likesistemas.com.br/"
    }
  ],
  "require": {
    "robmorgan/phinx": "^0.12.1",
    "symfony/yaml": "^5.1",
    "like/gateway-pagamento": "^1.0",
    "like/exception": "^1.2",
    "ext-pdo": "*"
  },
  "scripts": {
    "migrate": "phinx migrate",
    "seed": "phinx seed:run"
  },
  "extra": {
    "cleaner-ignore": {
      "robmorgan/phinx": true
    }
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "kylekatarnls/update-helper": true
    }
  }
}
